                            echo -n "<a class=\"btn\" href=esxi-mon.cgi?host="
                        fi

                    echo -n ${_ESXIX}
                    echo -n "&cmd=_show_all_vms_on_esxi>"
                    echo -n ${_ESXIX}
                    echo "</a>"
#                
                done 2>&1

#                fi

#        if [[ $HOST == esxi1 ]] 
